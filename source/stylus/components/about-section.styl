.about-section
  background-color $color-green

  &__container
    position relative
    z-index 1
    padding 0 0 20px 0
    +above($breakpoints.sm)
      padding 0 0 60px 0
    +above($breakpoints.md)
      padding 0 0 100px 0
    +above($breakpoints.xxl)
      padding 0 0 128px 0

  &__header
    padding 20px 0 20px 0
    border-radius: 30px
    background-image: url('../images/about-section-bg.jpg')
    background-repeat: no-repeat
    background-position: center
    background-size: cover
    +above($breakpoints.sm)
      border-radius: 50px
      padding 40px 0 50px 0
    +above($breakpoints.md)
      border-radius: 100px
      padding 60px 0 80px 0
    +above($breakpoints.xxl)
      padding 76px 0 95px 0

  &__title
    padding 0 0 20px 0
    +above($breakpoints.sm)
      padding 0 0 30px 0
    +above($breakpoints.md)
      padding 0 0 48px 0
    +above($breakpoints.xxl)
      padding 0 0 58px 0

  &__logo
    width 280px
    height: auto
    margin 0 auto
    +above($breakpoints.sm)
      width 350px
    +above($breakpoints.md)
      width 500px
    +above($breakpoints.xxl)
      width 640px

  &__content
    text-align: center
    padding 20px 10px 20px 10px
    +above($breakpoints.sm)
      text-align: start
      letter-spacing: -1px
      padding 30px 20px 30px 20px
    +above($breakpoints.md)
      padding 40px 40px 40px 50px
    +above($breakpoints.xxl)
      padding 56px 70px 67px 80px

  &__content-title
    line-height: 130% !important
    +above($breakpoints.md)
      line-height: 150% !important

  &__lines
    width 120px
    height: 4px
    margin 20px auto
    +above($breakpoints.sm)
      width 150px
      height: 6px
      margin 25px auto
    +above($breakpoints.md)
      width 280px
      height: 10px
      margin 35px auto
    +above($breakpoints.xxl)
      width 388px
      height: 12px
      margin 48px auto

  &__bottom
    border 1px solid $color-yellow
    border-radius: 20px
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      border-radius: 50px
      padding 31px 0 43px 0
    +above($breakpoints.md)
      border-radius: 100px
      padding 51px 0 63px 0
    +above($breakpoints.xxl)
      padding 61px 0 73px 0

  &__form
    display: flex
    flex-direction: column
    justify-content center
    align-items: center
    gap: 7px
    padding-top 20px
    +above($breakpoints.sm)
      flex-direction: row
      padding-top 35px
    +above($breakpoints.md)
      padding-top 55px

.about-item
  width 250px !important
  +above($breakpoints.sm)
    width 166px !important

.about-item-answer
  width 250px !important
  +above($breakpoints.sm)
    width 166px !important
  +above($breakpoints.md)
    width 360px !important
    text-align: start !important
    padding-left: 20px
  +above($breakpoints.xxl)
    width 524px !important