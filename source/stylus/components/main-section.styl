.main-section
  background-image: url('../images/main-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color $color-green

  &__container
    position relative
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 30px 0 60px 0
    +above($breakpoints.md)
      padding 30px 0 100px 0
    +above($breakpoints.xxl)
      padding 30px 0 169px 0

  &__title
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 60px 0 25px 0
    +above($breakpoints.md)
      padding 100px 0 30px 0
    +above($breakpoints.xxl)
      padding 167px 0 42px 0

  &__lines
    width 120px
    height: 4px
    margin 0 auto
    +above($breakpoints.sm)
      width 150px
      height: 6px
    +above($breakpoints.md)
      width 280px
      height: 10px
    +above($breakpoints.xxl)
      width 388px
      height: 12px

  &__sub-title
    padding 20px 0
    +above($breakpoints.sm)
      padding 30px 0
    +above($breakpoints.md)
      padding 38px 0
    +above($breakpoints.xxl)
      padding 42px 0

  &__bottom
    width 100%
    max-width: 647px
    margin 0 auto
    border 1px solid $color-yellow
    border-radius: 20px
    padding 20px 10px 20px 10px
    +above($breakpoints.sm)
      border-radius: 50px
      padding 25px 30px 30px 30px
    +above($breakpoints.md)
      border-radius: 100px
      padding 35px 50px 40px 50px
    +above($breakpoints.xxl)
      padding 41px 67px 52px 67px

  &__form
    display: flex
    flex-direction: column
    justify-content center
    align-items: center
    gap: 7px
    padding-top 20px
    +above($breakpoints.sm)
      padding-top 29px
      flex-direction: row

.main-item
  width 250px
  +above($breakpoints.sm)
    width 166px
