.city-section
  background-color $color-green

  &__container
    position relative
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 70px 0 50px 0
    +above($breakpoints.md)
      padding 100px 0 80px 0
    +above($breakpoints.xxl)
      padding 143px 0 117px 0

  &__box
    width 100%
    max-width: 400px
    +above($breakpoints.md)
      max-width: 480px
    +above($breakpoints.xxl)
      max-width: 569px

  &__title,
  &__sub-title
    text-align: center

  &__sub-title
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 30px 0 30px 0
    +above($breakpoints.md)
      padding 40px 0 35px 0
    +above($breakpoints.xxl)
      padding 65px 0 52px 0

  &__bottom
    padding 20px 0 20px 0
    border 1px solid $color-yellow
    border-radius: 20px
    +above($breakpoints.md)
      border-radius: 30px
      padding 25px 0 25px 0
    +above($breakpoints.xxl)
      border-radius: 50px
      padding 31px 0 33px 0

  &__form
    display: flex
    flex-direction: column
    align-items: center
    justify-content center
    gap: 8px
    padding-top 20px
    +above($breakpoints.xxl)
      padding-top 30px
      flex-direction: row

  &__img
    width 300px
    height: auto
    margin 20px auto 0
    +above($breakpoints.sm)
      position: absolute
      margin 0
      top: 243px
      right: 0
    +above($breakpoints.md)
      width 470px
      top: 235px
    +above($breakpoints.xxl)
      top: 93px
      right: -52px
      width 618px

.city-item
  width 250px !important
  +above($breakpoints.sm)
    width 320px !important
  +above($breakpoints.md)
    width 370px !important
  +above($breakpoints.xxl)
    width 163px !important

